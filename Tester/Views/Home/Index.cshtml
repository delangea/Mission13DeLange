@{
    ViewData["Title"] = "Home Page";
}
@model List<Bowler>
@if(ViewBag.Selected != null)
            {
                <h2 class="text-center">@ViewBag.Selected</h2>
            }
<a class="btn btn-primary text-center mb-3 text-white" asp-action="EditBowlers" asp-route-BowlerID="">Create New Bowler</a>
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>First Name</th>
            <th>Middle Initial</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Phone Number</th>
            <th>Team</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Bowler b in Model)
        {
            <tr>
                <td>@b.BowlerFirstName</td>
                <td>@b.BowlerMiddleInit</td>
                <td>@b.BowlerLastName</td>
                <td>@b.BowlerAddress</td>
                <td>@b.BowlerCity</td>
                <td>@b.BowlerState</td>
                <td>@b.BowlerZip</td>
                <td>@b.BowlerPhoneNumber</td>
                <td>@b.Team.TeamName</td>
                <td class="d-flex">
                    <a class="btn btn-primary text-white mr-2" asp-action="EditBowlers" asp-route-BowlerID="@b.BowlerID">Edit</a>
                    <form method="post" action="Index" id="@b.BowlerID">
                        <input type="hidden" name="BowlerID" value="@b.BowlerID" />
                        <button type="button" class="btn btn-danger text-white" onclick="if (confirm('Are you sure you want to delete this bowler?') == true) { document.getElementById('@b.BowlerID').submit(); } ">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
